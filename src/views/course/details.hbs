<main>
    <div class="container">
        <h1 class="my-4">Title : {{title}}</h1>

        <div class="row">
            <div class="col-md-8">
                <img class="img-fluid"
                    src="{{imageUrl}}"
                    alt="JavaScript" />
            </div>

            <div class="col-md-4 text-center">
                <h4 class="my-3">Duration</h4>
                <p>{{duration}}</p>
                <h3 class="my-3">Description</h3>
                <p>{{description}}</p>
                {{#if user.isOwner}}
                    <a class="btn btn-danger" href="/courses/{{_id}}/delete">Delete</a>
                    <a class="btn btn-warning" href="/courses/{{_id}}/edit">Edit</a>
                {{else}}
                    {{#if user.isEnroller}}
                        <span class="enrolled-span">You are already enrolled</span>
                    {{else}}
                        <a class="btn btn-primary" href="/courses/{{_id}}/enroll">Enroll</a>
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</main>